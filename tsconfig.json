{
  "compilerOptions":{
    "allowJs": false,
    "alwaysStrict": true,
    "jsx": "react",
    "newLine": "LF",
    "strict": true,
    "strictNullChecks": true,
    "target": "es2016",
    "module": "commonjs",
    "noImplicitAny": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "sourceMap": true
  },
  "exclude": ["**/__tests__/*", "**/__mocks__/*"]
}